#!/usr/bin/env php
<?php

require_once dirname(__DIR__) . '/vendor/autoload.php';

use Pac\Command;
use Pac\Console;

$args = Command::config(['auto' => true])
    ->addOption('no', [
        'alias' => 'n',
        'type' => 'number',
    ])
    ->parseCommand($argv);

Console::interactive("[You]: ", function($input) {
    echo $input;
});
exit;
